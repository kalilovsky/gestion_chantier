{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="dashboard">
    <div class="cards">
        <div class="resume">
            <a href="{{ path('utilisateursPage') }}"></a>
            <div class="chiffre">
                <div class="qt">{{personnes | length}} </div>
                <div class="denom">Utilisateurs enregistrés</div>
            </div>
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
        </div>
        <div class="resume">
            <a href="{{ path('chantiersPage') }}"></a>
            <div class="chiffre">
                <div class="qt">{{chantiers | length}} </div>
                <div class="denom">Chantiers enregistrés</div>
            </div>
            <div class="icon">
                <i class="fas fa-snowplow"></i>
            </div>
        </div>
        <div class="resume">
            <a href="{{ path('pointagesPage') }}"></a>
            <div class="chiffre">
                <div class="qt"> {{pointages | length}} </div>
                <div class="denom">Pointages enregistrés</div>
            </div>
            <div class="icon">
                <i class="far fa-clock"></i>
            </div>
        </div>
    </div>
</div>
{% endblock %}
